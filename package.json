{
  "name": "gloomhavensecretary",
  "version": "0.26.2",
  "license": "AGPL3",
  "description": "Gloomhaven Secretary is a Gloomhaven Companion app.",
  "homepage": "https://gloomhaven-secretary.de",
  "author": {
    "name": "Lurkars",
    "email": "ghs@champonthis.de",
    "url": "https://www.champonthis.de"
  },
  "repository": "github:Lurkars/gloomhavensecretary",
  "bugs": "https://github.com/Lurkars/gloomhavensecretary/issues",
  "funding": {
    "type": "ko-fi",
    "url": "https://ko-fi.com/lurkars"
  },
  "main": "main.js",
  "scripts": {
    "electron": "npm run build -- --base-href ./ && electron .",
    "electron:build": "npm run build -- --base-href ./ && electron-builder",
    "prestart": "node ./scripts/build-data.js",
    "start": "ng serve",
    "prebuild": "node ./scripts/build-data.js && node ./scripts/pre-build.js",
    "build": "ng build",
    "postbuild": "node ./scripts/post-build.js",
    "pretest": "node ./scripts/build-data.js",
    "test": "ng test"
  },
  "build": {
    "appId": "gloomhavensecretary",
    "linux": {
      "target": [
        "AppImage",
        "rpm",
        "deb"
      ],
      "publish": [
        "github"
      ]
    },
    "mac": {
      "type": "distribution",
      "target": [
        "dmg",
        "pkg"
      ],
      "publish": [
        "github"
      ]
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico",
      "publish": [
        "github"
      ]
    },
    "files": [
      "main.js",
      "dist/gloomhavensecretary"
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^15.0.0",
    "@angular/cdk": "^15.0.0",
    "@angular/common": "^15.0.0",
    "@angular/compiler": "^15.0.0",
    "@angular/core": "^15.0.0",
    "@angular/forms": "^15.0.0",
    "@angular/platform-browser": "^15.0.0",
    "@angular/platform-browser-dynamic": "^15.0.0",
    "@angular/router": "^15.0.0",
    "@angular/service-worker": "^15.0.0",
    "rxjs": "~7.5.7",
    "tslib": "^2.4.1",
    "zone.js": "~0.12.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^15.0.0",
    "@angular/cli": "^15.0.0",
    "@angular/compiler-cli": "^15.0.0",
    "@types/jasmine": "~4.3.0",
    "@types/uuid": "^8.3.4",
    "electron": "^21.3.0",
    "electron-builder": "^23.6.0",
    "http-server": "^14.1.1",
    "jasmine-core": "~4.5.0",
    "karma": "~6.4.1",
    "karma-chrome-launcher": "~3.1.1",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.0.0",
    "puppeteer": "^19.2.2",
    "typescript": "~4.8.4"
  }
}